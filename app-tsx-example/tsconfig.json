{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "jsx": "react",
        "reactNamespace": "UIBuilder",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "lib": [
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}